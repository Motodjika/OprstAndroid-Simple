<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:custom="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/scrollView"
            android:background="#ffffff"
            android:contextClickable="true">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp">


        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="2"
            android:foregroundGravity="center_vertical|center|center_horizontal"
            android:layout_gravity="center"
            android:gravity="center|center_horizontal"
            android:layout_weight="1">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/video_grid_title"
                android:id="@+id/button_video_grid_title"
                android:layout_weight="1"
                style="@style/Base.Widget.AppCompat.Button.Borderless"
                android:textColor="#e56862"
                android:textColorHighlight="#767575"
                android:textStyle="italic"
                android:textAlignment="center"
                android:shadowColor="#767575"
                android:layout_margin="0dp" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/photo_grid_title"
                android:id="@+id/button_photo_grid_title"
                android:layout_weight="1"
                style="@style/Base.Widget.AppCompat.Button.Borderless"
                android:textColor="#e56862"
                android:textColorHighlight="#767575"
                android:textStyle="italic"
                android:textAlignment="center"
                android:shadowColor="#767575"
                android:layout_margin="0dp" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:weightSum="2">

            <ImageView
                android:id="@+id/superior_video_view1"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_gravity="center"
                android:scaleType="centerCrop"
                android:layout_weight="1"
                android:paddingBottom="2dp"
                android:paddingRight="2dp" />

            <ImageView

                android:id="@+id/superior_photo_view1"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_gravity="center"
                android:scaleType="centerCrop"
                android:layout_weight="1"
                android:paddingBottom="2dp"
                android:paddingRight="2dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:weightSum="2">

            <ImageView
                android:id="@+id/superior_video_view2"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_gravity="center"
                android:scaleType="centerCrop"
                android:layout_weight="1"
                android:paddingBottom="2dp"
                android:paddingRight="2dp" />

            <ImageView
                android:id="@+id/superior_photo_view2"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_gravity="center"
                android:scaleType="centerCrop"
                android:layout_weight="1"
                android:paddingBottom="2dp"
                android:paddingRight="2dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:weightSum="2">

            <ImageView
                android:id="@+id/superior_video_view3"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_gravity="center"
                android:scaleType="centerCrop"
                android:layout_weight="1"
                android:paddingBottom="2dp"
                android:paddingRight="2dp" />

            <ImageView

                android:id="@+id/superior_photo_view3"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_gravity="center"
                android:scaleType="centerCrop"
                android:layout_weight="1"
                android:paddingBottom="2dp"
                android:paddingRight="2dp" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>