<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
              android:orientation="vertical"
    android:background="#ffffff">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="5dp"
        android:background="#ffffff">

        <TextView
            android:id="@+id/comment_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:layout_gravity="left"
            android:gravity="top"/>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="bottom">

            <Button
                style="@style/Widget.AppCompat.Button.Borderless.Colored"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:text="@string/comment_down_button"
                android:id="@+id/comment_down_btn"
                android:textColor="#a41111"
                android:textStyle="bold"
                android:layout_margin="0dp"
                android:padding="0dp"
                android:background="#8ec3c2c2" />

            <TextView
                android:id="@+id/comment_rating_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />

            <Button
                style="@style/Widget.AppCompat.Button.Borderless.Colored"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:text="@string/comment_up_button"
                android:id="@+id/comment_up_btn"
                android:textColor="#14540f"
                android:textStyle="bold"
                android:layout_margin="0dp"
                android:padding="0dp"
                android:background="#8ec3c2c2" />
        </LinearLayout>
        <TextView
            android:id="@+id/comment_add_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
    </LinearLayout>
</RelativeLayout>